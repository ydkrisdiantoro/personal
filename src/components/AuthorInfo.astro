---
interface Props {
	name: string;
	bio?: string;
	avatar?: string;
	url?: string;
}

const { name, bio, avatar, url } = Astro.props;
---

<div class="author-info">
	<div class="author-content">
		{avatar && (
			<div class="author-avatar">
				<img src={avatar} alt={`${name} avatar`} />
			</div>
		)}
		<div class="author-details">
			<div class="author-name">
				{url ? (
					<a href={url} target="_blank" rel="noopener noreferrer">{name}</a>
				) : (
					<span>{name}</span>
				)}
			</div>
			{bio && <div class="author-bio">{bio}</div>}
		</div>
	</div>
</div>

<style>
	.author-info {
		background: var(--gray-light);
		padding: 1.5rem;
		border-radius: 8px;
		margin: 2rem 0;
		border-left: 4px solid var(--accent);
	}
	
	.author-content {
		display: flex;
		align-items: center;
		gap: 1rem;
	}
	
	.author-avatar {
		flex-shrink: 0;
	}
	
	.author-avatar img {
		width: 60px;
		height: 60px;
		border-radius: 50%;
		object-fit: cover;
		border: 2px solid white;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
	}
	
	.author-details {
		flex-grow: 1;
	}
	
	.author-name {
		font-weight: 600;
		font-size: 1.1rem;
		margin-bottom: 0.25rem;
		color: rgb(var(--gray-dark));
	}
	
	.author-name a {
		color: var(--accent);
		text-decoration: none;
		transition: color 0.3s ease;
	}
	
	.author-name a:hover {
		color: var(--accent-dark);
		text-decoration: underline;
	}
	
	.author-bio {
		color: rgb(var(--gray));
		font-size: 0.9rem;
		line-height: 1.4;
	}
	
	@media (max-width: 640px) {
		.author-info {
			padding: 1rem;
		}
		
		.author-content {
			flex-direction: column;
			text-align: center;
			gap: 0.75rem;
		}
		
		.author-avatar img {
			width: 50px;
			height: 50px;
		}
	}
</style>
